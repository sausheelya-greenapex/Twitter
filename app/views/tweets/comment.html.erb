<section id="login-section">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-4">
                      <h2>Comment</h2>

        <div id="msform">
           <div class="comments-for-each-post">
            <%if @comments.present?%>
            <%@comments.each do |cmnt|%>
            <h3><td><%=cmnt.body%></td></h3>
            <%end%>
            <%end%>
           </div>
          <%=form_for :comment, url:post_comment_path do |f|%>
          <input type="hidden" name="tweet_id" value="<%=@tweet.id%>">
            <div class="form-field">
              <label id="error" class="alert alert-danger" style="display: none;"></label> 
              <div class="form-row">
                <div class="form-group col-3 tell-code pl-1">
                  <input type="text" name="body" id="tweet" class="form-control phone" placeholder="Enter Your Comment">
                </div>
               
              </div>
            
              
              <div class="row">
                <div class="col-md-12 ">
                  <input type="submit" class="action-button w-100 mt-5 mb-4" id="submit" value="submit">
                </div>
              </div>
              
             
            </div>
          <%end%>
        </div>
      </div>
      <div class="col-lg-8 pr-0">
        <div class="login-right">
          <!-- <img src="/assests/website/signup_image.png" />-->        
        </div>
      </div>
    </div>
  </div>
</section>